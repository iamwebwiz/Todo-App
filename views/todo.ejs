<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Todo App</title>

		<!-- Stylesheet files -->
		<link rel="stylesheet" href="/assets/css/bootstrap-theme.css">
		<link rel="stylesheet" href="/assets/css/bootstrap.css">
		<link rel="stylesheet" href="/assets/css/custom.css">

		<!-- JQuery Script -->
		<script src="/assets/js/jquery.min.js"></script>
	</head>
	<body>
		<div class="container">
			<form class="form-inline" action="" method="post">
				<h1>My ToDo List</h1>
				<div class="form-group">
					<label for="task" class="sr-only">Task</label>
					<input type="text" class="form-control" name="task" id="theTask" placeholder="Enter task here" required>
				</div>
				<div class="form-group">
				  <button type="submit" name="button" class="btn btn-default">Add to list</button>
				</div>
			</form>

			<div class="row">
				<div class="col-md-4 col-sm-12 col-xs-12 col-lg-4">
					<div id="tasks" style="margin-top: 20px">
						<h3 class="primary">Tasks</h3>
						<ul class="list-group">
							<% for (var i = 0; i < todos.length; i++) { %>
								<li class="list-group-item" id="my-task"><%= todos[i].item %></li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Script files -->
		<script src="/assets/js/todo-list.js"></script>
		<script src="/assets/js/bootstrap.min.js"></script>
	</body>
</html>
